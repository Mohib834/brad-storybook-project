<% include ../partials/header %>

<main>
<div class="container">
    <div class="row">
        <div class="col s12 m9">
            <div class="card story">
                <div class="card-content">
                    <span class="card-title"><%= story.title %> (<%= formatDate(story.date, 'MMMM Do YYYY') %>)</span>
                    <p class="story-text"><%= story.body %></p>
                </div>
            </div>
        </div>
        <div class="col s12 m3">
            <div class="card center-align">
                <div class="card-content">
                    <span class="card-title"><%= story.owner.firstName %> <%= story.owner.lastName %></span>
                    <img src="<%= story.owner.userAvatar %>" alt="" class="circle responsive-img">
                </div>
                <div class="card-action">
                    <a href="/stories/user/<%= story.owner.id %>">More From <%= story.owner.firstName %></a>
                </div>
            </div>
        </div>
    </div>
</div>
</main>

<% include ../partials/footer %>
